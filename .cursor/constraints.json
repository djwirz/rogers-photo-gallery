{
  "project": {
    "name": "Rogers Photo Gallery",
    "type": "family photo gallery",
    "scale": {
      "photos": 3000,
      "storage": "1GB"
    }
  },
  "technical_constraints": {
    "metadata": {
      "preserve": ["EXIF", "IPTC"],
      "required": true
    },
    "interface": {
      "type": "family-friendly",
      "complexity": "minimal"
    },
    "maintenance": {
      "level": "minimal",
      "automation": "preferred"
    }
  },
  "implementation_phases": {
    "current_phase": 3,
    "phase_status": "in_progress",
    "current_focus": "local_development",
    "next_focus": "deployment_strategy",
    "final_focus": "migration_process",
    "phase_requirements": {
      "local_development": {
        "status": "in_progress",
        "required_tasks": [
          "docker_environment_setup",
          "directory_structure_testing",
          "exif_data_validation"
        ],
        "dependencies": ["phase1_complete", "phase2_complete"]
      },
      "deployment_strategy": {
        "status": "pending",
        "required_tasks": [
          "volume_configuration",
          "deployment_process",
          "monitoring_setup",
          "backup_strategy"
        ],
        "dependencies": ["local_development_complete"]
      },
      "migration_process": {
        "status": "pending",
        "required_tasks": [
          "photo_organization",
          "deployment_verification",
          "full_migration",
          "final_testing"
        ],
        "dependencies": ["deployment_strategy_complete"]
      }
    },
    "allowed_features": [
      "flyio_deployment",
      "photoview_setup",
      "basic_auth",
      "simple_sharing",
      "local_development",
      "volume_persistence",
      "timeline_view",
      "exif_display",
      "directory_based_albums"
    ],
    "blocked_features": [
      "complex_auth",
      "custom_ui",
      "advanced_features",
      "proprietary_formats",
      "video_support",
      "face_recognition",
      "map_view",
      "raw_support",
      "runtime_uploads",
      "post_deployment_modifications",
      "version_control_operations"
    ]
  },
  "file_structure": {
    "required_directories": [
      "deduplicated_photos",
      "photos_to_process",
      "duplicate_photos",
      "test_photos"
    ],
    "allowed_extensions": [".jpg", ".jpeg", ".png"]
  },
  "deployment": {
    "platform": "fly.io",
    "application": "photoview",
    "requirements": [
      "persistent_storage",
      "basic_auth",
      "simple_sharing",
      "read_only_media",
      "local_development",
      "volume_persistence"
    ],
    "storage_constraints": {
      "volumes": {
        "max_per_machine": 1,
        "max_size_gb": 5,
        "min_size_gb": 1,
        "snapshot_retention_days": 1,
        "hardware_dependent": true,
        "region_bound": true
      }
    },
    "photoview_config": {
      "media_path": "/data/photos",
      "database_path": "/data/photoview.db",
      "cache_path": "/data/cache",
      "scan_interval": "0",
      "initial_scan": true,
      "auto_scanning": false,
      "read_only": true,
      "file_system_source_of_truth": true,
      "local_development": true
    },
    "photoview_principles": {
      "file_system_source_of_truth": true,
      "original_files_untouched": true,
      "read_only_media": true,
      "cache_based_thumbnails": true,
      "directory_based_albums": true,
      "local_testing_first": true
    },
    "development_workflow": {
      "local_testing": true,
      "small_batch_verification": true,
      "incremental_deployment": true,
      "documentation_required": true,
      "version_control": {
        "allowed": false,
        "reason": "Version control operations must be performed manually by the user",
        "blocked_operations": [
          "commit",
          "push",
          "pull",
          "merge",
          "branch",
          "rebase"
        ]
      }
    }
  }
}
