{
  "project": {
    "name": "Rogers Photo Gallery",
    "type": "family photo gallery",
    "scale": {
      "photos": 3000,
      "storage": "1GB"
    }
  },
  "technical_constraints": {
    "metadata": {
      "preserve": ["EXIF", "IPTC"],
      "required": true
    },
    "interface": {
      "type": "family-friendly",
      "complexity": "minimal"
    },
    "maintenance": {
      "level": "minimal",
      "automation": "preferred"
    }
  },
  "implementation_phases": {
    "current_phase": 3,
    "allowed_features": [
      "flyio_deployment",
      "photoview_setup",
      "basic_auth",
      "simple_sharing",
      "auto_scanning",
      "timeline_view",
      "exif_display"
    ],
    "blocked_features": [
      "complex_auth",
      "custom_ui",
      "advanced_features",
      "proprietary_formats",
      "video_support",
      "face_recognition",
      "map_view",
      "raw_support"
    ]
  },
  "file_structure": {
    "required_directories": [
      "deduplicated_photos",
      "photos_to_process",
      "duplicate_photos"
    ],
    "allowed_extensions": [".jpg", ".jpeg", ".png"]
  },
  "deployment": {
    "platform": "fly.io",
    "application": "photoview",
    "requirements": [
      "persistent_storage",
      "basic_auth",
      "simple_sharing",
      "read_only_media"
    ],
    "storage_constraints": {
      "volumes": {
        "max_per_machine": 1,
        "max_size_gb": 5,
        "min_size_gb": 1,
        "snapshot_retention_days": 1,
        "hardware_dependent": true,
        "region_bound": true
      }
    },
    "photoview_config": {
      "media_path": "/data/photos",
      "database_path": "/data/photoview.db",
      "cache_path": "/data/cache",
      "scan_interval": "1h",
      "initial_scan": true,
      "auto_scanning": true,
      "read_only": true,
      "file_system_source_of_truth": true
    },
    "photoview_principles": {
      "file_system_source_of_truth": true,
      "original_files_untouched": true,
      "read_only_media": true,
      "cache_based_thumbnails": true,
      "directory_based_albums": true
    }
  }
}
